<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alom_background"
    >

    <ImageView
        android:id="@+id/imageView2"
        app:srcCompat="@drawable/logo"
        android:layout_width="129.84dp"
        android:layout_height="78dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="ALOM"
        android:textColor="@color/alom_green"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="출석체크"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="271dp"
        android:layout_height="52dp"
        android:layout_marginTop="532dp"
        android:background="@drawable/button_border"
        android:text="입력완료"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:text="코드를 입력하세요"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/id"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1"
        />

    <EditText
        android:id="@+id/editTextNumberPassword2"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/id"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1"
        />

    <EditText
        android:id="@+id/editTextNumberPassword3"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/id"
        android:ems="10"
        android:inputType="numberPassword"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumberPassword4"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="145dp"
        android:background="@drawable/id"
        android:ems="10"
        android:inputType="numberPassword"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>