<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    tools:context=".ui.members.MembersFragment">

    <ImageView
        android:id="@+id/announcement_write_icon"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/edit"

        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="공지 작성하기"
        android:textSize="20sp"
        android:textColor="@color/alom_green"

        app:layout_constraintBottom_toTopOf="@+id/editText_subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcement_write_icon" />

    <EditText
        android:id="@+id/editText_subject"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"

        android:layout_marginRight="5dp"
        android:text="    제목   제목을 입력하세요"
        android:textSize="15sp"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:background="@drawable/border"/>

    <EditText
        android:id="@+id/editText_content"
        android:layout_width="375dp"
        android:layout_height="0dp"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"

        android:layout_marginRight="5dp"
        android:layout_marginBottom="130dp"
        android:text="    내용   공지사항을 입력하세요"
        android:textSize="15sp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_subject"
        app:layout_constraintVertical_bias="1.0"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="18dp"
        android:background="@drawable/button_border"
        android:text="등록하기"
        android:textColor="@color/white"

        android:textSize="17sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_content" />

</androidx.constraintlayout.widget.ConstraintLayout>