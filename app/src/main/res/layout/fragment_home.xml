<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    tools:context=".ui.members.MembersFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/alom_symbol"
        android:layout_width="61.59dp"
        android:layout_height="37dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/alom_symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/announce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="104dp"
        android:text="반가워요, 36기 김다경님\n오늘도 출석을 완료하셨네요!"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attendance_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="167dp"
        android:text="이번달에는 총 3번 출석하셨습니다!\n(3/10)"
        android:textColor="#909090"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_bg"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/info_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_more_bg"
        android:layout_width="95dp"
        android:layout_height="17dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/info_more_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💡 [2학기 정기 모임 활동 안내]"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/etc2"
        app:layout_constraintEnd_toEndOf="@+id/info_bg"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="@+id/info_bg"
        app:layout_constraintTop_toTopOf="@+id/info_bg"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/etc2"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:text="2학기 정기모임 활동 관련 안내입니다. 활동 관련해서 쉬는날은 10월 일정에 착오 없으시길 바랍니 ..."
        android:textColor="#909090"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/under_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="@+id/info_bg"
        app:layout_constraintTop_toTopOf="@+id/info_bg"
        app:layout_constraintVertical_bias="0.642" />

    <TextView
        android:id="@+id/etc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10월 26일 ㅣ 김다경 작성"
        android:textColor="#909090"
        android:textSize="7sp"
        app:layout_constraintBottom_toTopOf="@+id/under_bg"
        app:layout_constraintEnd_toEndOf="@+id/info_bg"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/info_bg"
        app:layout_constraintVertical_bias="0.28" />

    <ImageView
        android:id="@+id/alom_symbol_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alom_symbol_black"
        app:layout_constraintBottom_toTopOf="@+id/info_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/under_bg"
        android:layout_width="0dp"
        android:layout_height="502dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/introduce_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="#00ff0000"
        android:text="공지사항 더보기"
        android:textColor="@color/alom_green"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/under_bg"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alom_symbol_black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="16dp"
        android:text="아롬을 소개합니다!"
        android:textColor="@color/alom_green"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/under_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="@+id/under_bg"
        app:layout_constraintTop_toTopOf="@+id/under_bg"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아롬은 어떤 활동을 하는 동아리 인가요?"
        android:textColor="@color/alom_green"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/under_bg"
        app:layout_constraintEnd_toEndOf="@+id/under_bg"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="@+id/under_bg"
        app:layout_constraintTop_toTopOf="@+id/under_bg"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="275dp"
        android:layout_height="144dp"
        android:text="여기에 올라오는 글들은 보통 아롬 소개에 집중되어 올라옵니다. 동아리에서 하는 활동을 사진으로 찍어 올리기도 하고, 이렇게 글과 함께 작성하여 조금 더 세세한 정보를 나타내주기도 합니다. 인스타그램처럼 간략하게 해시태그와 같은 방법으로 사진에 대한 키워드로만 알려주기도 합니다. 이 페이지는 아마도 동아리 멘토분들?이 작성할 것 같네요!"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/under_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="@+id/under_bg"
        app:layout_constraintTop_toTopOf="@+id/under_bg"
        app:layout_constraintVertical_bias="0.256" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#아롬 #정기모임 #과정"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="@+id/under_bg"
        app:layout_constraintTop_toTopOf="@+id/under_bg"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="48dp"
        android:layout_height="13dp"
        android:text="😎🫠✨"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/under_bg"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/under_bg"
        app:layout_constraintVertical_bias="0.938" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="266dp"
        android:layout_height="32dp"
        android:text="‘아롬 프로젝트 중 머머머'를 진행 중 입니다! 현재 블라블라정도 한 상태입니다 :>"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/under_bg"
        app:layout_constraintEnd_toEndOf="@+id/under_bg"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/under_bg"
        app:layout_constraintTop_toTopOf="@+id/under_bg"
        app:layout_constraintVertical_bias="0.921" />


</androidx.constraintlayout.widget.ConstraintLayout>